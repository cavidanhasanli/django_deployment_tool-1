[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=#{APP_USER}
Group=www-data
WorkingDirectory=#{APP_ROOT_DIRECTORY}
ExecStart=#{APP_ROOT_DIRECTORY}/.venv/bin/gunicorn --workers 3 --bind unix:#{APP_ROOT_DIRECTORY}/#{APP_NAME}.sock #{APP_NAME}.wsgi:application

[Install]
WantedBy=multi-user.target
